<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:magic="http://magic.com/schemas/gradients"
             x:Class="Cinepolis.vMenu.peliculaElegida" NavigationPage.HasNavigationBar="False">
    
    
    <ContentPage.Content>
        
        <ScrollView >
            <Grid>
                <magic:GradientView VerticalOptions="FillAndExpand">
                    <magic:GradientView.GradientSource>
                        <magic:LinearGradient Angle="180">
                            <magic:GradientStop Color="#020024" Offset="0.02"/>
                            <magic:GradientStop Color="#090979" Offset="0.79"/>
                            <magic:GradientStop Color="#005bff" Offset="0.100"/>
                            <magic:GradientStop Color="#0657ad" Offset="0.94"/>
                        </magic:LinearGradient>
                    </magic:GradientView.GradientSource>
                </magic:GradientView>

                <StackLayout BackgroundColor="#213Ac4">
                <Label x:Name="lblTitulo" FontSize="30" HorizontalTextAlignment="Center" TextColor="LightCyan" FontAttributes="Bold" Margin="0,10,0,0" />
                <Frame BackgroundColor="Transparent" 
                       CornerRadius="20" 
                       HeightRequest="400" 
                       Margin="0,0,0,0" 
                       Padding="0,0,0,0" 
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="CenterAndExpand"                       
                       >
                    <Image x:Name="imgBanner"  Margin="0,0,0,0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HeightRequest="450"/>
                </Frame>             
                        
             <Label x:Name="lblSynopsis" Margin="5,10,5,0" TextColor="White" HorizontalTextAlignment="Start"/>

            <StackLayout Orientation="Horizontal" Margin="10,0,0,0">
                
                    <Label Text="Duración: " FontAttributes="Bold" TextColor="White" Margin="0,10,0,0"/>
                    <Label x:Name="lblDuración" TextColor="White" Margin="30,10,0,0"/>
                    <Label Text="Horas" FontAttributes="None" TextColor="White" Margin="0,10,0,0"/>

                </StackLayout>

            <StackLayout Orientation="Horizontal" Margin="10,0,0,0">
                    <Label Text="Clasificación: " FontAttributes="Bold" TextColor="White"/>
                    <Label x:Name="lblClasificacion" TextColor="White" Margin="5,0,0,0"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" Margin="10,0,1,0">
                    <Label Text="Año: " FontAttributes="Bold" TextColor="White"/>
                    <Label x:Name="lblAño" TextColor="White" Margin="61,0,0,0" />
            </StackLayout>

            <StackLayout Orientation="Horizontal" Margin="10,0,0,0">
                    <Label Text="Genero: " FontAttributes="Bold" TextColor="White" />
                    <Label x:Name="lblGenero" TextColor="White" Margin="40,0,0,0"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" Margin="10,0,0,0">
                    <Label Text="Director: " FontAttributes="Bold"  TextColor="White"/>
                    <Label x:Name="lblDirector" TextColor="White" Margin="34,0,0,0"/>
            </StackLayout>
                <Button Grid.Column="0" TextTransform="None"
                        Text="Ver Trailer" FontSize="18" FontAttributes="Bold"
                        BackgroundColor="#094293" x:Name="btnVideo" BorderWidth="1" BorderColor="Yellow"  Clicked="btnVideo_Clicked" TextColor="White" CornerRadius="10" Margin="50,15,50,5"/>
                <Grid>
                        <Button Grid.Column="0" Text="Atras" BackgroundColor="#094293" BorderWidth="1" BorderColor="Yellow"  x:Name="btnAtras"  Clicked="btnAtras_Clicked" TextColor="White" CornerRadius="10" Margin="20,0,20,10" TextTransform="None" FontSize="18" FontAttributes="Bold"/>
                        <Button Grid.Column="1" Text="Reservar" BackgroundColor="#094293" BorderWidth="1" BorderColor="Yellow"  x:Name="btnContinuar" Clicked="btnContinuar_Clicked" TextColor="White" CornerRadius="10" TextTransform="None"  Margin="20,0,20,10" FontSize="18" FontAttributes="Bold"/>
            </Grid>
        </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>